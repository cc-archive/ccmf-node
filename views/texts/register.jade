extends ../layout

block head
	link(rel='stylesheet', href='/css/views/texts/register.css')
	script(src='/js/views/texts/register.js')
	script(src='/node_modules/ccmf/lib/build/ccmf.js')
	script(src='http://rickharrison.github.io/validate.js/validate.min.js')
	script(type='text/javascript')
		var local_data =!{JSON.stringify(locals.user)}
block header
	div.row-fluid
		div.span8.offset5
			h1= title
block content
	div.row-fluid.offset3
		section#instructions-area
			header Instructions
			article 
					| Insert the text content into the registry.  
					| All texts crawled on the web would compare to this registry.
	div.row-fluid.offset3
		section#register-area
			textarea.span5
	div.row-fluid.offset5
		section#result
			span
	div.row-fluid.offset5
		button(type='button')#register-btn.btn Register
